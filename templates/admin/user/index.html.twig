{% extends 'admin.html.twig' %}

{% block title %}Gestion des invités{% endblock %}

{% block admin %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Invités</h1>
        <a href="{{ path('admin_guest_add') }}" class="btn btn-primary">Ajouter</a>
    </div>
    <table class="table">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.name }}</td>
                <td>
                    {% if user.isActive %}
                        <a href="{{ path('admin_guest_remove_access', {id: user.id}) }}" class="btn btn-warning">Bloquer l'accès</a>
                    {% else %}
                        <a href="{{ path('admin_guest_add_access', {id: user.id}) }}" class="btn btn-secondary">Débloquer l'accès</a>
                    {% endif %}
                    <a href="{{ path('admin_guest_delete', {id: user.id}) }}" class="btn btn-danger">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
